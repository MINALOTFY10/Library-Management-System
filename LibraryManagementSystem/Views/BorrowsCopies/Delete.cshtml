@model LibraryManagementSystem.ViewModel.BorrowsCopyMemberBookViewModel

@{
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/site.css">

    <style>
        .form-header {
            background: radial-gradient(100% 100% at 100% 0%, #FF6B6B 0%, #FF0000 100%);
        }

        .form-card {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .bttn-danger {
            height: 50px
        }

        .bttn-gray {
            height: 50px;
            text-decoration: none;
        }
    </style>
</head>

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="text-danger">🗑️ Delete Borrowing Process</h2>
        <p>Are you sure you want to delete this Borrowing? This action cannot be undone.</p>
    </div>

    <div class="card form-card mx-auto" style="max-width: 800px;">
        <div class="form-header">Confirm Deletion</div>
        <div class="card-body bg-white px-4 py-4">
            <h4 class="text-danger mb-4">Borrowing Details</h4>
            <dl class="row">
                <dt class="col-sm-3">Borrowed By:</dt>
                <dd class="col-sm-9">@Model.MemberName</dd>
                <dt class="col-sm-3">Borrowed Book:</dt>
                <dd class="col-sm-9">@Model.BookName</dd>
                <dt class="col-sm-3">Copy ID:</dt>
                <dd class="col-sm-9">@Model.BookCopyId</dd>
                <dt class="col-sm-3">Borrow Date:</dt>
                <dd class="col-sm-9">@Model.BorrowDate.ToString("MM/dd/yyyy")</dd>
                <dt class="col-sm-3">Due Date:</dt>
                <dd class="col-sm-9">@Model.DueDate.ToString("MM/dd/yyyy")</dd>
                <dt class="col-sm-3">Return Date:</dt>
                <dd class="col-sm-9">@(Model.ReturnDate.HasValue ? Model.ReturnDate.Value.ToString("MM/dd/yyyy") : "N/A")</dd>
                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">@Model.Status</dd>
            </dl>

            <div class="text-center mt-4 d-flex justify-content-center gap-2 flex-wrap">
                <form asp-action="SaveDelete" asp-controller="BorrowsCopies" asp-route-memberid="@Model.MemberId" asp-route-bookid="@Model.BookId" method="post">
                    <button type="submit" class="bttn-danger">
                        <i class="fas fa-trash-alt me-2"></i> Confirm Delete
                    </button>
                </form>
                <button asp-action="Index" class="bttn-gray">
                    <i class="fas fa-arrow-left me-2"></i> Back to List
                </button>
            </div>
        </div>
    </div>
</div>
