@model LibraryManagementSystem.Models.Member

@{
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/site.css">


    <style>
        .form-header {
            background: linear-gradient(90deg, #dc3545, #ff5e5e);
        }

        .form-card {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .btn-secondary {
            background-color: #6c757d;
            padding: 0.8rem 2rem;
        }

        .btn-danger {
            background: linear-gradient(90deg, #dc3545, #ff5e5e);
            border: none;
            color: white;
            font-size: 1rem;
            padding: 0.8rem 2rem;
            border-radius: 5px;
            transition: all 0.3s ease;
        }
    </style>
</head>

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="text-danger">🗑️ Delete Member</h2>
        <p>Are you sure you want to delete this Member? This action cannot be undone.</p>
    </div>

    <div class="card form-card mx-auto" style="max-width: 800px;">
        <div class="form-header">Confirm Deletion</div>
        <div class="card-body bg-white px-4 py-4">
            <h4 class="text-danger mb-4">Member Details</h4>
            <dl class="row">
                <dt class="col-sm-3">ID:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>
                <dt class="col-sm-3">First Name:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FirstName)</dd>
                <dt class="col-sm-3">Last Name:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.LastName)</dd>
                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
                <dt class="col-sm-3">Phone Number:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PhoneNumber)</dd>
                <dt class="col-sm-3">Joining Date:</dt>
                <dd class="col-sm-9">@Model.DateOfMembership.ToString("MM/dd/yyyy")</dd>
                <dt class="col-sm-3">Membership Type:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MembershipType)</dd>
            </dl>

            <div class="text-center mt-4 d-flex justify-content-center gap-2 flex-wrap">
                <form asp-action="SaveDelete" asp-controller="Member" asp-route-id="@Model.Id" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-2"></i> Confirm Delete
                    </button>
                </form>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
