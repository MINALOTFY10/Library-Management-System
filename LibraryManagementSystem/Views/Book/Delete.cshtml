@model LibraryManagementSystem.Models.Book

@{
    ViewData["Title"] = "Delete a Book";
}

<head>
    <link rel="stylesheet" href="/css/site.css">

    <style>
        .form-header {
            background: radial-gradient(100% 100% at 100% 0%, #FF6B6B 0%, #FF0000 100%);
        }

        .form-card {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .bttn-danger {
            height: 50px
        }

        .bttn-gray {
            height: 50px;
            text-decoration: none;
        }
    </style>
</head>

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="text-danger">🗑️ Delete Book</h2>
        <p>Are you sure you want to delete this book? This action cannot be undone.</p>
    </div>

    <div class="card form-card mx-auto" style="max-width: 800px;">
        <div class="form-header">Confirm Deletion</div>
        <div class="card-body bg-white px-4 py-4">
            <h4 class="text-danger mb-4">Book Details</h4>

            <!-- Book Details -->
            <dl class="row">
                <dt class="col-sm-3">Title:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>
                <dt class="col-sm-3">Author:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Author)</dd>
                <dt class="col-sm-3">ISBN:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ISBN)</dd>
                <dt class="col-sm-3">Publisher:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Publisher)</dd>
                <dt class="col-sm-3">Published Date:</dt>
                <dd class="col-sm-9">@Model.PublishedDate.ToString("MM/dd/yyyy")</dd>
                <dt class="col-sm-3">Language:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Language)</dd>
            </dl>

            <!-- Buttons -->
            <div class="text-center mt-4 d-flex justify-content-center gap-2 flex-wrap">
                <form asp-action="SaveDelete" asp-controller="Book" asp-route-id="@Model.Id" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="bttn-danger px-4">
                        <i class="fas fa-trash-alt me-2"></i> Confirm Delete
                    </button>
                </form>
                <button asp-action="Index" class="bttn-gray">
                    <i class="fas fa-arrow-left me-2"></i> Back to List
                </button>
            </div>
        </div>
    </div>
</div>
