<style>
    .sidebar-dark .my-nav-item {
        margin: 5px 0;
        padding: 0;
        list-style-type: none;
    }

    .sidebar-dark .my-nav-item .nav-link {
        padding: 12px 20px; /* Adjust padding to your preference */
        margin: 0;
        display: flex;
        align-items: center;
        text-align: left;
        color: #000; /* Default text color */
