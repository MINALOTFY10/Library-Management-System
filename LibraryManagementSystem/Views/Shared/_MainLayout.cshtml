    }

     .sidebar-dark .my-nav-item .nav-link p {
        color: black;
        font-weight: 400;
    }

    .sidebar-dark .my-nav-item .nav-link i {
        color: black;
        width: 1.9rem;
        margin-left: 3px;
        margin-right: 10px; /* Space between icon and text */
        min-width: 20px; /* Ensure icons have consistent width */
        text-align: center;
    }

    .sidebar-dark .my-nav-item .nav-link {
        position: relative;
        overflow: hidden; 
    }

    .sidebar-dark .my-nav-item .nav-link::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background-color: #E0F0FB;
        z-index: 0; 
        transition: left 0.5s ease; 
    }

        .sidebar-dark .my-nav-item .nav-link:hover::before {
        left: 0;
    }

    .sidebar-dark .my-nav-item .nav-link:hover p {
        color: black !important;
        position: relative;
        z-index: 1; 
    }

    .sidebar-dark .my-nav-item .nav-link:hover i {
