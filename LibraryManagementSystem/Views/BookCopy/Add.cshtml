@model BookCopyBooksViewModel

@{
    ViewData["Title"] = "Add a New Book Copy";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/site.css">
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">

    <style>
        .card {
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05) !important;
        }

    </style>
</head>

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2><i class="fas fa-book"></i> Add a New Book Copy</h2>
        <p>Fill out the details to add a new Copy to the library</p>
    </div>
     
    <div class="card form-card mx-auto mb-5" style="max-width: 800px;">
        <div class="form-header">Copy Details</div>
        <div class="card-body px-4 py-4">
            <form method="post" asp-action="SaveAdd" asp-controller="BookCopy" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <!-- Copy Number -->
                <div class="form-section">
                    <label asp-for="Number">Copy No.</label>
                    <input asp-for="Number"
                           class="form-control"
                           readonly
                           value="@TempData["CopyNumber"]" />
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>

                <!-- Name -->
                <div class="form-section">
                    <label asp-for="BookName">Book Name</label>
                    <input asp-for="BookName"
                           class="form-control"
                           readonly
                           value="@TempData["BookName"]" />
                    <span asp-validation-for="BookName" class="text-danger"></span>
                </div>


                <!-- Location -->
                <div class="form-section">
                    <label asp-for="Location">Location</label>
                    <input asp-for="Location" class="form-control" placeholder="Enter copy location" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>

                <!-- Condition Status -->
                <div class="form-section">
                    <label asp-for="ConditionStatus">Condition Status</label>
                    <select asp-for="ConditionStatus" class="form-select">
                        @foreach (var status in Enum.GetValues(typeof(LibraryManagementSystem.Models.ConditionStatus)))
                        {
                            <option value="@status">@status</option>
                        }
                    </select>
                    <span asp-validation-for="ConditionStatus" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <div class="text-center mt-4 d-flex justify-content-center gap-2 flex-wrap">
                    <button type="submit" class="bttn-primary">
                        <i class="fas fa-save me-2"></i> Add Book
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
