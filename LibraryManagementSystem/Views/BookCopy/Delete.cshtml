@model LibraryManagementSystem.Models.BookCopy

@{
    ViewData["Title"] = "Delete a Book Copy";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        .form-header {
            background: linear-gradient(90deg, #dc3545, #ff5e5e);
            font-size: 1.5rem;
        }

    </style>
</head>

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2>🗑️ Delete Book Copy</h2>
        <p>Are you sure you want to delete this copy? This action cannot be undone.</p>
    </div>

    <div class="card form-card mx-auto" style="max-width: 800px;">
        <div class="form-header">Confirm Deletion</div>
        <div class="card-body bg-white px-4 py-4">
            <h4 class="text-danger mb-4">Copy Details</h4>
            <dl class="row">
                <dt class="col-sm-3">Copy No.:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Number)</dd>
                <dt class="col-sm-3">Condition:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ConditionStatus)</dd>
            </dl>

            <div class="text-center mt-4 d-flex justify-content-center gap-2 flex-wrap">
                <form asp-action="SaveDelete" asp-controller="BookCopy" asp-route-id="@Model.Id" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-2"></i> Confirm Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
