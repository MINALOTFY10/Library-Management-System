@model DashboardViewModel

@{
    ViewData["Title"] = "Home Page";
}

<html lang="en">
<head>
    <!-- Custom styles for this template -->
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/site.css">

    <!-- Example for Font Awesome v6 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>

<body>
    <!-- Content Row ( First 2 Graphs) -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <partial name="~/Views/Dashboard/_SiteDescription.cshtml" />
        </div>

        <!-- Pie Chart -->
        <div class="col-xl-6 col-lg-5">
            <partial name="~/Views/Dashboard/Charts/_PieChart.cshtml" model="@Model.GenreBookCount" />
        </div>
    </div>

    <!-- Content Row (Most Borrowed Books Chart) -->
    <div class="row">
        <div class="col-lg-12">
            <partial name="~/Views/Dashboard/Charts/_SameColorBarChart.cshtml" model="@Model.Top5BorrowedBooks" />
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/js/sb-admin-2.min.js"></script>
    <script src="~/vendor/chart.js/Chart.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</body>
</html>


